{
  "addLabels": ["repo-tracker"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^repo-tracker\\.ya?ml$/"
      ],
      "matchStrings": [
        "- github\\.com\\/(?<depName>\\S+)\\s*(?<currentDigest>[a-f0-9]{40})\\s#(?<currentValue>\\S+)\\s*\\n"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "regex"
      ],
      "matchUpdateTypes": [
        "digest",
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": "github-tags",
      "matchFileNames": ["repo-tracker.yaml", "repo-tracker.yml"],
      "groupName": "Repo Tracker Update",
      "groupSlug": "repo-tracker-udpate"
    }
  ]
}
